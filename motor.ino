// Adafruit_nRF8001 - Version: Latest #include <Adafruit_BLE_UART.h>/*Define the output pins*/int leftEn = 7;int rightEn = 2;int leftFwd = 6;int rightFwd = 3;int leftRvr = 9;int rightRvr = 5;void setup() {    pinMode(leftEn, OUTPUT);    pinMode(rightEn, OUTPUT);    pinMode(leftFwd, OUTPUT);    pinMode(rightFwd, OUTPUT);    pinMode(leftRvr, OUTPUT);    pinMode(rightRvr, OUTPUT);}void loop() {    goStraight();    delay(1000);    goRight();    delay(2000);    goStop();    delay(1000);}void goStraight(){  digitalWrite(rightEn, HIGH);  digitalWrite(leftEn, HIGH);  digitalWrite(rightRvr, LOW);  digitalWrite(leftRvr, LOW);  digitalWrite(rightFwd, HIGH);  digitalWrite(leftFwd, HIGH);}void goRight(){  digitalWrite(rightEn, HIGH);  digitalWrite(leftEn, HIGH);  digitalWrite(rightRvr, LOW);  digitalWrite(leftRvr, LOW);  digitalWrite(rightFwd, 200);  digitalWrite(leftFwd, HIGH);}void goStop(){  digitalWrite(rightEn, LOW);  digitalWrite(leftEn, LOW);  digitalWrite(rightRvr, LOW);  digitalWrite(leftRvr, LOW);  digitalWrite(rightFwd, LOW);  digitalWrite(leftFwd, LOW);}